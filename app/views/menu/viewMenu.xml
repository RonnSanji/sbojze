<Alloy>
	<View id="viewMenu" layout="vertical">
		<View id="top" layout="horizontal">
			<ImageView id="photo"/>
			<View id="titleView">
				<Label id="menuTitle"/>
			</View>
		</View>
		<View id="middle" layout="vertical">
			<View id="homeSelect" layout="vertical" class="select">
				<View id="homeBorder" class="border"/>
				<View id="homeLine" class="line" layout="horizontal">
					<ImageView id="homeIcon" class="image"/>
					<View id="homeTitleView" class="titleView">
						<Label id="homeTitle"/>
					</View>
				</View>
			</View>
			
			<View id="profileSelect" layout="vertical" class="select">
				<View id="profileBorder" class="border"/>
				<View id="profileLine" class="line" layout="horizontal">
					<ImageView id="profileIcon" class="image"/>
					<View id="profileTitleView" class="titleView">
						<Label id="profileTitle"/>
					</View>
				</View>
			</View>
			
			<View id="searchSelect" layout="vertical" class="select">
				<View id="searchBorder" class="border"/>
				<View id="searchLine" class="line" layout="horizontal">
					<ImageView id="searchIcon" class="image"/>
					<View id="searchTitleView" class="titleView">
						<Label id="searchTitle"/>
					</View>
				</View>
			</View>
			
			<View id="manageSelect" layout="vertical" class="select">
				<View id="manageBorder" class="border"/>
				<View id="manageLine" class="line" layout="horizontal">
					<ImageView id="manageIcon" class="image"/>
					<View id="manageTitleView" class="titleView">
						<Label id="manageTitle"/>
					</View>
				</View>
			</View>
			
			<View id="settingsSelect" layout="vertical" class="select">
				<View id="settingsBorder" class="border"/>
				<View id="settingsLine" class="line" layout="horizontal">
					<ImageView id="settingsIcon" class="image"/>
					<View id="settingsTitleView" class="titleView">
						<Label id="settingsTitle"/>
					</View>
				</View>
			</View>
			
			<View id="enquirySelect" layout="vertical" class="select">
				<View id="enquiryBorder" class="border"/>
				<View id="enquiryLine" class="line" layout="horizontal">
					<ImageView id="enquiryIcon" class="image"/>
					<View id="enquiryTitleView" class="titleView">
						<Label id="enquiryTitle"/>
					</View>
				</View>
			</View>
			
			<View id="middleBorder"/>
		</View>
		
		<View id="bottom">
			<View id="logoutLine" layout="horizontal">
				<ImageView id="logoutIcon"/>
				<View id="logoutTitleView">
					<Label id="logoutTitle"/>
				</View>
			</View>
		</View>
		
	</View>
